<input name="schoolId" type="hidden" data-force-value="true" value="{{currentSchool}}" />

<input name="teacherId" type="hidden" data-force-value="true" value="{{currentUser._id}}" />

<div class="form-group">
    <label>Titel</label>
    <input class="form-control" name="name" type="text" placeholder="Titel" required />
</div>

<div class="form-group">
    <label>Kurs</label>
    <select name="courseId" required data-placeholder="Kurs auswählen">
        {{#each courses}}
            <option value="{{this._id}}" {{#if this.selected}}selected{{/if}}>{{this.name}}</option>
        {{/each}}
    </select>
    <label>
        <input name="private" type="checkbox" value="private" />
        Private Aufgabe
    </label>
</div>

<div class="form-group">
    <label>Aufgabenstellung</label>
    <textarea class="form-control" name="description" type="text" placeholder="Aufgabenstellung" required></textarea>
</div>

<div class="form-group">
    <label>Bearbeitungszeit von</label>
    <input class="form-control" name="availableDate" type="date" placeholder="dd.mm.yy" required />
</div>

<div class="form-group">
    <label>bis</label>
    <input class="form-control" name="dueDate" type="date" placeholder="dd.mm.yy" required />
</div>

<div class="form-group">
    <label>
        <input name="publicSubmissions" type="checkbox" value="publicSubmissions" />
        Schülerabgaben untereinander sichtbar
    </label>
</div>