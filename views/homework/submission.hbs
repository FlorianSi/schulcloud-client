<section id="submission" class="section-homeworkdetails">
    <div class="homework">
        <div class="comment">
            <h6>Kommentar</h6>
            {{#if true}}
                <div class="form-group">
                    <textarea id="evaluation" class="form-control" placeholder="Verfasse einen Kommentar...">{{#if comment}}{{comment}}{{/if}}</textarea>
                </div>
            {{else}}
                {{#if comment}}
                    <p>{{comment}}</p>
                {{else}}
                    <p>Kein Kommentar.</p>
                {{/if}}

            {{/if}}
        </div>
        <h6>Dateien</h6>
        <div class="material card">
            <ul>
                <li>
                    <img src="http://placehold.it/100x80"/>
                    <p class="title">ExtraLongFilename.html</p>
                    <div class="buttons">
                        <a class="download" href="#"><i class="fa fa-cloud-download" aria-hidden="true"></i></a>
                        <a class="delete" href="#"><i class="fa fa-trash" aria-hidden="true"></i></a>
                    </div>
                </li>
                <li>
                    <a class="add" href="#"><i class="fa fa-plus" aria-hidden="true"></i></a>
                </li>
            </ul>
        </div>
    </div>
</section>