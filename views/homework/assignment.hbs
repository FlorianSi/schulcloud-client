{{#extend "homework/homework"}}
	{{#content "scripts" mode="append"}}
        <script type="text/javascript">
        $(document).ready(function(){

			if(!window.location.hash){ window.location.hash="extended"}
			
			document.getElementById(window.location.hash.substr(1)+"-tab-link").classList.add("active");
			
			$(window).on('hashchange', function() {
				document.getElementsByClassName("tab-link active")[0].classList.remove("active");
				document.getElementById(window.location.hash.substr(1)+"-tab-link").classList.add("active");
			});

			$('.userinfo').click(function(){
                $(this).parent('.usersubmission.active').addClass('clicked');
                $('.usersubmission.active').removeClass('active');
                $(this).parent('.usersubmission:not(.clicked)').toggleClass('active');
                $('.usersubmission.clicked').removeClass('clicked');

                $('.usersubmission td:last-of-type i').removeClass('fa-times').addClass('fa-pencil-square-o');
                $('.usersubmission.active td:last-of-type i').removeClass('fa-pencil-square-o').addClass('fa-times');
            });
			
			$('.sub-tabs .tab-links .tab-link').click(function(){
                $('.tab-link.active').removeClass('active');
                $(this).addClass('active');
				
                $('.tab-content.active').removeClass('active');
				//console.log("Subtab-Click", "."+this.id.replace("-tab-link","")+" .tab-content");
				$(".tabs"+" ."+this.id.replace("-tab-link","")+".tab-content").addClass('active');
			});
			
		});
        </script>
    {{/content}}
    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/homework/assignment.css"/>
		<link rel="stylesheet" href="/styles/homework/submissions.css"/>
    {{/content}}
    {{#content "page"}}

        <section class="section-homework">
            <div class="due">{{dueDateF}}</div>

			<nav class="tab-links">
				<a href="#extended" id="extended-tab-link" class="tab-link">Details</a>
                {{#if private}}
                    <a href="#submission" id="submission-tab-link" class="tab-link">Abgabe</a>
                {{else}}
                    {{#ifvalue teacherId value=currentUser._id}}
                        <a href="#submissions" id="submissions-tab-link" class="tab-link">Abgaben</a>
                    {{else}}
                        <a href="#submission" id="submission-tab-link" class="tab-link">Abgabe</a>
                        <a href="#feedback" id="feedback-tab-link" class="tab-link">Feedback</a>
                    {{/ifvalue}}
                {{/if}}
			</nav>
			<div class="tabs">
				{{> 'homework/extended'}}
                {{#if private}}
                    {{> 'homework/submission'}}
                {{else}}
                    {{#ifvalue teacherId value=currentUser._id}}
                        {{> 'homework/submissions'}}
                    {{else}}
                        {{> 'homework/submission'}}
                        {{> 'homework/feedback'}}
                    {{/ifvalue}}
                {{/if}}
			</div>
        </section>
    {{/content}}
{{/extend}}