<h4>{{{stripOnlyScript title}}}</h4>

<div class="card-columns">

    {{#each content.resources}}
        <div class="card">
            <div class="card-block">
                <h4 class="card-title">
                    <a href="{{url}}" target="_blank">
                        {{{stripOnlyScript title}}}
                    </a>
                </h4>
                <p class="card-text">{{{stripOnlyScript description}}}</p>
            </div>
            <div class="card-footer">
                <small class="text-muted">via {{client}}</small>
            </div>
        </div>
    {{/each}}

</div>
