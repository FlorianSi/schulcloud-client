{{#extend "lib/loggedin"}}

    {{#content "scripts" mode="append"}}
        <script src="{{ furl '/scripts/vendor-react.js' }}" defer></script>
        <script src="{{ furl '/vendor/ckeditor/ckeditor.js' }}" defer></script>
        <script src="{{ furl '/scripts/topicEdit.js' }}" defer></script>
        <script src="{{ furl '/scripts/courses.js' }}" defer></script>
    {{/content}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="{{ furl '/styles/courses/course.css' }}"/>
    {{/content}}

    {{#content "page"}}
        <section class="section-course-edit">
            <form action="{{action}}" method="post">
                {{#if method}}
                    <input type="hidden" name="_method" data-force-value="true" value="{{method}}" />
                {{/if}}

                <input name="courseId" type="hidden" data-force-value="true" value="{{courseId}}" />

                <input name="courseGroupId" type="hidden" data-force-value="true" value="{{courseGroupId}}" />
                
                <input name="position" type="hidden" data-force-value="true" value="{{lesson.position}}" />

                <div class="form-group">
                    <label>Titel des Themas</label>
                    <input class="form-control" name="name" type="text" placeholder="z.B. Rechnen mit Primzahlen" value="{{{lesson.name}}}" required />                
                </div>

                <div class="form-group">
                    <label>Inhalte</label>

                    <!-- React Magic -->
                    <div id="content-blocks" data-value="{{lesson.contents}}" data-etherpadbaseurl="{{etherpadBaseUrl}}" data-iscoursegroup="{{courseGroupId}}"></div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-close" onclick="window.history.back();">
                        {{closeLabel}}
                    </button>

                    <button type="submit" class="btn btn-primary btn-submit">
                        {{submitLabel}}
                    </button>
                </div>

            </form>
        </section>
    {{/content}}
{{/extend}}
