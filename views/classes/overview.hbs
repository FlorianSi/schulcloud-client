{{#extend "lib/loggedin"}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/classes/classes.css"/>
    {{/content}}

    {{#content "page"}}
        <section class="section-classes">
            <div>
                <div class="row results card-deck-row">
                    {{#each classes}}
                        {{#each this}}
                            <div class="col-md-4 col-sm-6 col-xs-12">
                                <div class="card h-100">
                                    <div class="card-block">
                                        <h4 class="card-title">
                                            {{this.name}}
                                            {{#userHasPermission "COURSE_EDIT"}} 
                                                <small><a class="btn-edit text-muted"
                                                    href="/classes/{{../_id}}/edit"
                                                    title="Bearbeiten der Klasse: '{{../name}}'.">
                                                    <i class="fa fa-pencil"></i>
                                                </a></small>
                                            {{/userHasPermission}}
                                        </h4>
                                        <div class="content">
                                            {{#userHasPermission "COURSE_EDIT"}}
                                                <div class="row">
                                                    <a class="btn-manage"
                                                       href="/classes/{{../_id}}/manage"
                                                       title="Schüler & Lehrer der Klasse '{{../name}}' verwalten.">
                                                        <i class="fa fa-users"></i>
                                                    </a>
                                                    <a
                                                       href="/classes/{{../_id}}"
                                                       target="_blank"
                                                       data-method="DELETE"
                                                       data-name="{{../name}}"
                                                       title="Löschen der Klasse: '{{../name}}'.">
                                                        <i class="fa fa-trash-o"></i>
                                                    </a>
                                                </div>
                                            {{/userHasPermission}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    {{else}}
                        <div class="col-xs-12">
                            <p class="text-muted text-center">
                                <span>Keine Klassen.</span>
                            </p>
                        </div>
                    {{/each}}
                </div>

                {{#userHasPermission "COURSE_EDIT"}}
                    <div class="row padding-top">
                        <a href="/classes/create" class="btn btn-add btn-primary">Klasse hinzufügen</a>
                    </div>
                {{/userHasPermission}}
            </div>

            {{#embed "lib/components/modal" class="delete-modal" title="Bist du dir sicher?"}}
                {{#content "body"}}

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-close">
                            Abbrechen
                        </button>

                        <button type="submit" class="btn btn-primary btn-submit">
                            Löschen
                        </button>
                    </div>
                {{/content}}
            {{/embed}}
        </section>
    {{/content}}
{{/extend}}
