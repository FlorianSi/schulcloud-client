{{#ifEnv "SENTRY" true}}
	<script src="/vendor-optimized/sentry/5.5.0/bundle.min.js"></script>
	<script>
	Sentry.init({ dsn: 'https://https://sentry.schul-cloud.dev/sc-client' });
	Sentry.configureScope((scope) => {
		scope.setUser({"id": "{{ @root.locals.currentUser._id }}"});
		scope.setTag({"domain":"{{@root.locals.domain}}"});
		scope.setTag({"production":"{{@root.locals.production}}"});
		// todo add commit hash
	});
	</script>
{{/ifEnv}}
