<div class="list-group list-group-flush">
    <h5>Aktivit√§tenlog</h5>
    <!-- TODO: Limit number of statements -->
    {{#each statements}}
        <div class="list-group-item">
            {{#if actor.account.displayName}}
                {{actor.account.displayName}}
            {{else}}
                Unbekannt
            {{/if}}
            {{verb.display.en-US}}
            <a href="{{object.id}}">{{object.definition.name.de}}</a>
            {{#if object.definition.description.de}}
                ({{object.definition.description.de}})
            {{/if}}
            <small>{{timeFromNow timestamp}}</small>
        </div>
    {{/each}}
</div>