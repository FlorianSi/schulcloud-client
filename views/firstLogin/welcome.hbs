{{#extend "lib/loggedin"}}
    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/courses/empty-state.css"/>
    {{/content}}
    {{#content "page"}}
        <div class="empty-state">
          <img src="/images/empty-states/lehrer_klasse.png" alt="Noch keine Kurse" class="image mx-auto d-block"/>
          <div class="text-wrapper mx-auto d-block">
            <h2 class="text-center">Willkommen in der {{theme.title}}, {{currentUser.displayName}}</h2>
            {{#if isStudent}}

            {{else}}
              <h5 class="text-muted text-center">
                  Mit der {{theme.short_title}} Unterricht digital gestalten
              </h5>
            {{/if}}

          </div>

            <div class="row">
                <div class="center buttons">
                  {{#if isStudent}}
                    <a href="/courses/" class="btn btn-primary btn-lg btn-add">Zu deinen Kursen</a>
                  {{else}}
                    <a href="/courses/add" class="btn btn-primary btn-lg btn-add">Erstelle deinen ersten Kurs</a>
                  {{/if}}
                </div>
            </div>

        </div>
    {{/content}}
{{/extend}}
