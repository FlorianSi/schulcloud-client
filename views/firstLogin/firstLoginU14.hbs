{{#extend "lib/simple"}}
  {{> "firstLogin/sections/imports"}}
  {{#content "page"}}
    {{set "sections" 4}}
    {{set "section" 0}}

    {{#embed "lib/forms/paginatedForm" sections=@root.sections action="/firstLogin/submit" method="post"}}
      {{#content "panels"}}
        {{inc "section"}}
        {{> "firstLogin/sections/welcome" section-nr=@root.section}}

        {{inc "section"}}
        {{> "firstLogin/sections/email" section-nr=@root.section}}

        {{inc "section"}}
        {{> "firstLogin/sections/password" section-nr=@root.section submit-page=true}}

        {{inc "section"}}
        {{> "firstLogin/sections/thanks" section-nr=@root.section}}

      {{/content}}
    {{/embed}}
  {{/content}}
{{/extend}}