{{#extend "lib/simple"}}
  {{> "firstLogin/sections/imports"}}
  {{#content "page"}}
    {{#embed "lib/forms/paginatedForm" sections=3 action="/firstLogin/submit" method="post"}}
      {{#content "panels"}}

        {{> "firstLogin/sections/welcome" section-nr=1}}

        {{> "firstLogin/sections/password" section-nr=2 submit-page=true}}

        {{> "firstLogin/sections/thanks" section-nr=3}}

      {{/content}}
    {{/embed}}
  {{/content}}
{{/extend}}
{{> (lookup . section) section-nr=(add @index 1) submit-page=@root.submit-page-index}}

{{#each sections}}
  {{log this}}
{{/each}}