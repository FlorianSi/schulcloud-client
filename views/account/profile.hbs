{{#extend "lib/loggedin"}}
    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/account/profile.css"/>
    {{/content}}

    {{#content "scripts" mode="append"}}
        <script src="/scripts/profile.js" type="text/javascript" defer></script>
    {{/content}}

    {{#content "page"}}
    <div class="profile">
      <div class="profile-header">
        <img class="profile-avatar" src="/images/avatars/Leonardo.png" alt="">
        <div class="profile-text">
          <div><span>{{../currentUser.firstName}} {{../currentUser.lastName}}</span></div>
          <div><span>Level 1</span></div>
          <br>
          <div><span class="number">10</span> Erfahrungspunkte</div>
          <div><span class="number">1</span> Badges</div>
        </div>
        <div class="clear">

        </div>
      </div>

      <div class="badges">
        <h3>Badges</h3>

        <div class="badge-row">
          <img src="/images/badges/king.png" alt="">
          <div class="badge-content">
            <div class="badge-title">
              Hausaufgaben-König
              <span>+50 Punkte</span>
            </div>
            <div class="badge-description">
              Pünktlichkeit wird doppelt belohnt! Du hast 10 Mal deine Hausaufgaben rechtzeitig abgegeben und erhältst 50 Punkte extra.
            </div>
          </div>
        </div>

        <div class="badge-row">
          <img src="/images/badges/prince.png" alt="">
          <div class="badge-content">
            <div class="badge-title">
              Hausaufgaben-König
              <span>+50 Punkte</span>
            </div>
            <div class="badge-description">
              Pünktlichkeit wird belohnt! Du hast 5 Mal deine Hausaufgaben rechtzeitig abgegeben und erhältst dafür diese Badge und 25 Punkte. Weiter so!
            </div>
          </div>
        </div>
      </div>

      </div>

    </div>
    {{/content}}
{{/extend}}
