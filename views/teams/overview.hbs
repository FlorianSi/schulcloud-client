{{#extend "lib/loggedin"}}

    {{#content "scripts" mode="append"}}
    {{/content}}
    {{#content "styles" mode="append"}}
    {{/content}}

    {{#content "page"}}
        <section class="section-courses">
                {{#if courses}}
                    {{> 'dashboard/components/card_section' section-id="courses" title="" content=courses link-text="Öffnen" additionalInfoName="memberCount"}}
                {{else}}
                    <div class="col-xs-12">
                        <p class="text-muted text-center">
                            <span>Keine Teams.</span>
                        </p>
                    </div>
                {{/if}}

                {{#userHasPermission "COURSE_EDIT"}}
                    <section>
                        <div class="section-title mb-2"><h4>Meine Vertretungen</h4></div>
                        {{#if ../substitutionCourses}}
                            {{> 'dashboard/components/card_section' section-id="substitutionCourses" title="" content=../substitutionCourses link-text="Öffnen" additionalInfoName="memberCount"}}
                        {{else}}
                            <div class="col-xs-12">
                                <p class="text-muted text-center">
                                    <span>Keine Teams.</span>
                                </p>
                            </div>
                        {{/if}}
                    </section>
                {{/userHasPermission}}

                {{#userHasPermission "COURSE_EDIT"}}
                <div class="col-xs-12">
                    <div class="row padding-top">
                        <div class="col-sm-12">
                            <a href="/teams/add" class="btn btn-add btn-primary">Team anlegen</a>
                            <a class="btn btn-add btn-secondary btn-import-course">Team importieren</a>
                        </div>
                    </div>
                </div>
                {{/userHasPermission}}

            {{#embed "lib/components/modal" class="member-modal"}}
                {{#content "body"}}
                    <div class="modal-body">
                        <div id="member-modal-body">
                        </div>
                        {{#userHasPermission "COURSE_EDIT"}}
                            <div id='course-edit'></div>
                        {{/userHasPermission}}
                    </div>
                {{/content}}
            {{/embed}}

            {{#embed "lib/components/modal-form" class="add-member-modal"}}
                {{#content "fields"}}
                    {{> "teams/forms/form-add-member"}}
                {{/content}}
            {{/embed}}

            {{#embed "lib/components/modal-form" class="import-modal"}}
                {{#content "fields"}}
                    {{> "courses/forms/form-import-course"}}
                {{/content}}
            {{/embed}}

        </section>
    {{/content}}
{{/extend}}
