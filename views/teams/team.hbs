{{#extend "lib/loggedin"}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/vendor/jquery/jquery-ui.css"/>
    {{/content}}

    {{#content "scripts" mode="append"}}
        <script src="/scripts/jquery/jquery-ui.min.js" type="text/javascript" defer></script>
        <script src="/scripts/jquery/jquery.ui.touch-punch.js" type="text/javascript" defer></script>
    {{/content}}

    {{#content "page"}}

        <section class="section-teams" data-id="{{../_id}}">

            <div class="row description">
                <div class="col-sm-12">
                    <p class="lead">{{description}}</p>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <h4>Mitglieder</h4>
                    <p>
                      Im Team
                      {{#ifCond (arrayLength course.userIds) '==' 1}} befindet {{/ifCond}}
                      {{#ifCond (arrayLength course.userIds) '>' 1}} befinden {{/ifCond}}
                      sich <strong>{{arrayLength course.userIds}}</strong>
                      {{#ifCond (arrayLength course.userIds) '==' 1}} Mitglied {{/ifCond}}
                      {{#ifCond (arrayLength course.userIds) '>' 1}} Mitglieder {{/ifCond}}
                    </p>
                    <a href="/teams/{{_id}}/members" class="btn btn-add btn-secondary">
                        Zur Mitglieder-Übersicht
                    </a>
                </div>
            </div>

            <div class="row padding-top">
                <div class="col-sm-12">
                    <h4>News</h4>
                </div>
            </div>

            <div class="row padding-top">
                <div class="col-sm-12">
                    <h4>Dateien</h4>
                    <a href="{{filesUrl}}" class="btn btn-add btn-secondary">Zu den Team-Dateien</a>
                </div>
            </div>

            <div class="row padding-top">
                <div class="col-sm-12">
                    <h4>Themen & Aufgaben</h4>
                    <a href="/teams/{{_id}}/topics" class="btn btn-add btn-secondary">
                        Zur Themen-Übersicht
                    </a>
                </div>
            </div>

            <div class="row padding-top">
                <div class="col-sm-12">
                    <h4>Termine</h4>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    {{#inArray "RENAME_TEAM" permissions}}
                        <a href="/teams/{{../_id}}/edit" class="btn btn-add btn-primary">Team bearbeiten</a>
                        {{!-- <a href="/teams/{{../_id}}/copy" class="btn btn-add btn-secondary">Team klonen</a> --}}
                        {{!-- <a class="btn btn-secondary btn-create-share-course" data-courseId="{{../_id}}">Team teilen</a> --}}
                    {{/inArray}}

                    {{#inArray "DELETE_TEAM" permissions}}
                        <a href="/teams/{{../_id}}/"
                           class="btn btn-delete-course btn-secondary"
                           target="_blank"
                           data-method="DELETE"
                           data-name="{{../name}}"
                           redirect="/teams/">Team löschen</a>
                    {{/inArray}}
                </div>
            </div>

            {{#embed "lib/components/modal" class="delete-modal" title="Bist du dir sicher?"}}
                {{#content "body"}}

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-close">
                            Abbrechen
                        </button>

                        <button type="submit" class="btn btn-primary btn-submit">
                            Löschen
                        </button>
                    </div>
                {{/content}}
            {{/embed}}

            {{#embed "lib/components/modal-form" class="import-modal"}}
                {{#content "fields"}}
                    {{> "courses/forms/form-import-topic"}}
                {{/content}}
            {{/embed}}

            {{#embed "lib/components/modal-form" class="share-modal"}}
                {{#content "fields"}}
                    {{> "topic/forms/form-share"}}
                {{/content}}
            {{/embed}}

        </section>
    {{/content}}
{{/extend}}
