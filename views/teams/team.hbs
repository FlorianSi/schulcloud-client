{{#extend "lib/loggedin"}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/courses/course.css"/>
        <link rel="stylesheet" href="/styles/homework/homework.css"/>
        <link rel="stylesheet" href="/vendor/jquery/jquery-ui.css"/>
    {{/content}}

    {{#content "scripts" mode="append"}}
        <script src="/scripts/jquery/jquery-ui.min.js" type="text/javascript" defer></script>
        <script src="/scripts/jquery/jquery.ui.touch-punch.js" type="text/javascript" defer></script>
        <script src="/scripts/courses.js" type="text/javascript" defer></script>
        <script src="/scripts/topic.js" type="text/javascript" defer></script>
    {{/content}}

    {{#content "page"}}

        <section class="section-course">

            <div class="row description">
                <div class="col-sm-12">
                    <p class="lead">{{description}}</p>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <h4>Mitglieder</h4>
                    <p>
                      Im Team befinden sich <strong>3</strong> Lehrer,
                      <strong>5</strong> Schüler und <strong>1</strong> Experte.
                    </p>
                    <button type="button" class="btn btn-secondary btn-close">
                        Details
                    </button>
                </div>
            </div>

            <div class="row padding-top">
                <div class="col-sm-12">
                    <h4>News</h4>
                </div>
            </div>

            <div class="row padding-top">
                <div class="col-sm-12">
                    <h4>Dateien</h4>
                </div>
            </div>

            <div class="row padding-top">
                <div class="col-sm-12">
                    <h4>Themen & Aufgaben</h4>
                    <p>Es gibt derzeit <strong>3</strong> Themen und <strong>5</strong> Aufgaben</p>
                    <button type="button" class="btn btn-secondary btn-close">
                        Details
                    </button>
                </div>
            </div>

            <div class="row padding-top">
                <div class="col-sm-12">
                    <h4>Termine</h4>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    {{#userHasPermission "COURSE_EDIT"}}
                        <a href="/teams/{{../_id}}/edit" class="btn btn-add btn-primary">Team bearbeiten</a>
                        <a href="/teams/{{../_id}}/copy" class="btn btn-add btn-secondary">Team klonen</a>
                        <a class="btn btn-secondary btn-create-share-course" data-courseId="{{../_id}}">Team teilen</a>
                        <a href="/teams/{{../_id}}/"
                           class="btn btn-delete-course btn-secondary"
                           target="_blank"
                           data-method="DELETE"
                           data-name="{{../name}}"
                           redirect="/teams/">Team löschen</a>
                        <a data-href="teams/{{../_id}}/" href="#" class="btn btn-add btn-secondary btn-create-invitation">zum Kurs einladen</a>
                    {{/userHasPermission}}
                    <a href="{{filesUrl}}" class="btn btn-add btn-secondary">Zu den Team-Dateien</a>
                </div>
            </div>

            {{#embed "lib/components/modal" class="delete-modal" title="Bist du dir sicher?"}}
                {{#content "body"}}

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-close">
                            Abbrechen
                        </button>

                        <button type="submit" class="btn btn-primary btn-submit">
                            Löschen
                        </button>
                    </div>
                {{/content}}
            {{/embed}}

            {{#embed "lib/components/modal-form" class="invitation-modal"}}
                {{#content "fields"}}
                    {{> "courses/forms/form-invitation"}}
                {{/content}}
            {{/embed}}

            {{#embed "lib/components/modal-form" class="import-modal"}}
                {{#content "fields"}}
                    {{> "courses/forms/form-import-topic"}}
                {{/content}}
            {{/embed}}

            {{#embed "lib/components/modal-form" class="share-modal"}}
                {{#content "fields"}}
                    {{> "topic/forms/form-share"}}
                {{/content}}
            {{/embed}}

        </section>
    {{/content}}
{{/extend}}
