{{#extend "administration/administration"}}
    {{#content "page"}}
        <div class="route-administration">
            <section class="section-school section-default">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-12 no-padding">
                            {{> "lib/components/notification"}}

                            {{> "lib/components/table" head=head body=body}}
                        </div>
                    </div>
                    <div class="row">
                        {{> "lib/components/pagination" settings=pagination }}
                    </div>
                    <div class="row">
                        <div class="col-sm-12 no-padding">
                            <button type="submit" class="btn btn-primary btn-add">
                                Schüler hinzufügen
                            </button>
                        </div>
                    </div>
                </div>


                {{#embed "lib/components/modal" action="/administration/students/" method="post" class="edit-modal"}}
                    {{#content "fields"}}
                        <input name="_id" type="hidden" />

                        <input name="schoolId" type="hidden" data-force-value="true" value="{{currentSchool}}" />

                        <input name="roles[]" type="hidden" data-force-value="true" value="student" />

                        <div class="form-group">
                            <label>Vorname</label>
                            <input class="form-control" name="firstName" type="text" placeholder="Max" required />
                        </div>

                        <div class="form-group">
                            <label>Nachname</label>
                            <input class="form-control" name="lastName" type="text" placeholder="Mustermann" required />
                        </div>

                        <div class="form-group">
                            <label>E-Mail-Adresse</label>
                            <input class="form-control" name="email" type="text" placeholder="test@test.org" required />
                        </div>
                    {{/content}}
                {{/embed}}


            </section>
        </div>
    {{/content}}
{{/extend}}