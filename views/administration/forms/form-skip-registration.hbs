<div class="form-group row">
    <div class="col-md-6">
        <h5>Schüler unter 16 Jahre alt</h5>
        <label><input name="privacyConsent" type="checkbox" value="true" /> Datenschutz Schüler</label><br />
        <label><input name="termsOfUseConsent" type="checkbox" value="true" /> Nutzung Schüler</label><br />
    </div>
    <div class="col-md-6">
        <h5>Schüler über 16 Jahre alt</h5>
        <label><input name="parent_privacyConsent" type="checkbox" value="true" /> Datenschutz Eltern</label><br />
        <label><input name="parent_termsOfUseConsent" type="checkbox" value="true" /> Nutzung Eltern</label><br />
    </div>

</div>
<div class="form-group">
    {{> "lib/forms/password-hint"}}
    <div class="form-group">
        <label for="change_password">Passwort vergeben:</label>
        <input id="change_password" type="password" name="password" id="password" class="form-control form-control-lg"
            placeholder="***************"
            pattern="^(?=.*[A-Z])(?=.*[0-9])(?=.*[a-z])(?=.*[\-_!<>§$%&\/()=?\\;:,.#+*~']).{8,255}$"
            title="{{> "lib/forms/password-hint" plaintext=true}}" required>
    </div>

</div>