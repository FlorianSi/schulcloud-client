
<link rel="stylesheet" href="/styles/content/content.css"/>

{{#with this}}
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">{{title}}</h4>
        </div>
        <div class="modal-body">
            <table>
            {{#each content}}
                <tr class="content" id="{{ _id }}" width="100%">
                    <td width="60%">
                        <div class="content-header">
                            <h3>{{title}}</h3>
                        </div>

                        <div class="content-path"> Mathe/Algebra/</div>
                        via {{ providerName }}
                    </td>
                    <td width="20%">
                    <span class="rating-star rate">
                        <span class="fa fa-star-o rate-item rate-item-active" data-rating="1" readonly="false" id="{{ _id }}" ></span>
                        <span class="fa fa-star-o rate-item rate-item-active" data-rating="2" readonly="false" id="{{ _id }}" ></span>
                        <span class="fa fa-star-o rate-item rate-item-active" data-rating="3" readonly="false" id="{{ _id }}" ></span>
                        <span class="fa fa-star-o rate-item rate-item-active" data-rating="4" readonly="false" id="{{ _id }}" ></span>
                        <span class="fa fa-star-o rate-item rate-item-active" data-rating="5" readonly="false" id="{{ _id }}" ></span>
                        <input type="hidden" id="{{ _id }}" class="rating-value" value="{{rating}}">
                    </span>
                    </td>
                    <td width="10%">
                        <div class="pull-right btn btn-primary btn-send-rate" id="{{ _id }}"> send </div>
                    </td>

                </tr>
            {{/each}}
            </table>
        </div>
        <!--<div class="modal-footer">

          <button  class="btn btn-primary btn-send-rate" data-dismiss="modal"> send </button>
        </div>-->
    </div>

</div>

{{/with}}

<script src="/scripts/rating.js" type="text/javascript" defer></script>
